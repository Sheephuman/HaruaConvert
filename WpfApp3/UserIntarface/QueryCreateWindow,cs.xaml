<Window x:Class="HaruaConvert.userintarface.QueryCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:UserControl="clr-namespace:HaruaConvert.UserControls"
        mc:Ignorable="d"
        Title="QueryCreateWindow_cs" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="ビットレート" FontSize="20"/>
                <UserControl:QueryBuildUpDown Width="80" Height="30"/>
                <Label Content="kbps" FontSize="20"/>                     
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="コーデック" FontSize="20"/>
                <ComboBox Width="100" Margin="6"/>
            </StackPanel>
            <StackPanel>

                <CheckBox>
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    </CheckBox.LayoutTransform>
                    <TextBlock Text="Twitterに投稿可能なQuery"/>
                </CheckBox>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
