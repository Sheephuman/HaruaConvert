             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:usercontrols="clr-namespace:HaruaConvert.UserControls"
             mc:Ignorable="d"              
             d:DesignHeight="50" d:DesignWidth="450">
    <Grid Height="20">
        <StackPanel Height="20" Orientation="Horizontal"
                    Margin="10,0,0,0 ">
            <TextBox TextChanged="FilePathBox_TextChanged"  x:Name="FilePathBox" Width="300" Height="22.5" Margin="0,0,20,0"/>
            <Button x:Name="openDialogButton"  Content="･･･" Width="40"  Height="20" Margin="-5,0,0,0" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
